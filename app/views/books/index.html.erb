<div class="books-page">
	<div class="books-content">
		<% if flash[:notice] %>
	      <div class="flash-create">
	        <%= flash[:notice] %>
		   </div>
		 <% end %>
		<h1>Books</h1>

		<table border="0">
			<thead>
			    <tr>
		  		    <th>Title</th>
		    	    <th>body</th>
		        </tr>
			</thead>
			<tbody>
				<% @books.each do |post| %>
		        <tr>
				    <td><%= post.title %></td>
				    <td><div class="body-margin"><%= post.body %></div></td>
				    <td><div class="show-link"><%= link_to 'Show', "/books/#{post.id}" %></div></td>
				    <td><div class="edit-link"><%= link_to 'Edit', "/books/#{post.id}/edit" %></div></td>
				    <td><div class="destroy-link"><%= link_to 'Destroy', "/books/#{post.id}", method: :delete, "data-confirm" => "Are you sure?" %>
				     </div></td>
				</tr>
				<% end %>
			</tbody>
		 </table>

		<div class="new-form">
		<h3>New book</h3>

			<%= form_for(@book) do |f| %>
			  <% if @book.errors.any? %>
			    <%= @book.errors.count %>error!
			    <%= @book.errors.full_messages.each do |message| %>
			      <%= message %>
			    <% end %>
			  <% end %>
		    <h5>Title</h5>
		    <%= f.text_field :title %>
		    <h5>body</h5>
		    <%= f.text_area :body %>

		<div class="ok-box">
		    <%= f.submit 'Create Book' %>
		</div>

		<% end %>
		</div>
    </div>
</div>