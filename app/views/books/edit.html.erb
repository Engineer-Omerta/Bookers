<div class="edit-page">

	<div class="edit-content">
		<h1>Editing Book</h1>
		<%= form_for(@book) do |f| %>
		<% if @book.errors.any? %>
			    <%= @book.errors.count %>error!
			    <%= @book.errors.full_messages.each do |message| %>
			      <%= message %>
			      <% end %>
			    <% end %>
		<h5>Title</h5>
		<%= f.text_field :title %>
 
        <div class="edit-body-form">
		<h5>Body</h5>
		<div class="ok-box">
		<%= f.text_area :body %>
	    </div>
        </div>
	    <%= f.submit 'Update Book' %>
		<% end %>

	    <div class="add-menu2 clearfix">
			<p class="show"><%= link_to 'Show', "/books/#{@book.id}" %></p>
			<p class="wall">|</p>
			<p class="back"><%= link_to 'Back', "/books" %></p>
	    </div>
    </div>

</div>