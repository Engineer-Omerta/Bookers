<div class="show-page">
	<div class="show-content">
		<div class="show-info">
		    <div class="title-box">
			<% if flash[:notice] %>
		      <div class="flash-create">
		        <%= flash[:notice] %>
		      </div>
		    <% end %>
			    <h4>Title: <%= @book.title %></h4>
		    </div>
		    <div class="body-box">
				<h4>Body: <%= @book.body %></h4>
			</div>
	    </div>
	    <div class="add-menu clearfix">
			<p class="edit"><%= link_to 'Edit', "/books/#{@book.id}/edit" %></p>
			<p class="wall">|</p>
			<p class="back"><%= link_to 'Back', "/books" %></p>
	    </div>
    </div>
</div>